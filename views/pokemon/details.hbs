<div class="container">
    <h1 class="pokemon-name capitaliced"><span>{{name}}</span> </h1>
    <div class="row">
        <div class="col-md-6 poke-img-bg ">
            <figure class="main-img-pokemon">
                <img class="pokeImg" src="{{sprites.other.dream_world.front_default}}" alt="image {{name}}" />
            </figure>
        </div>
        <div class="col-md-6">
            <div class="text-center">
                <h3>Habilidades</h3>

                <ul>
                    {{#each abilities}}

                    <p>{{ability.name}}</p>

                    {{/each}}
                </ul>
                <hr>
                <h3> Experiencia</h3>
                <p>{{base_experience}}</p>
                <hr>
                <h3> Altura</h3>
                <p>{{height}} cm</p>
                <hr>
                <h3> Peso</h3>
                <p>{{weight}} lbs</p>
                <hr>

            </div>

        </div>

    </div>

</div>