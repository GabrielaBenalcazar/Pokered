<div class="container">

    <h1>Perfil de, {{user.username}}</h1>

    <figure>
        <img src="{{user.img}}" alt="foto de {{user.username}} " />
    </figure>
    <div>
        <h3> TUS POKEMONS </h3>
        <ul>

            {{#each user.pokemons}}

            <li>
                <h5>{{this}}</h5>
            </li>

            {{/each}}

        </ul>
    </div>

    <div>
        <h3> TUS EVENTOS </h3>
        {{user.events}}
    </div>

    <div>
        <button class="btn btn-sm btn-dark">

            <a href="/profile/{{user._id}}/edit"> editar Perfil</a>

        </button>
    </div>
    <div>
        <form action="/profile/{{user._id}}/delete" method="POST">
            <button class="btn btn-sm btn-dark" type="submit">Eliminar</button>
        </form>

    </div>
    {{#if isLeader}}
    <li class="nav-item">
        <a class="btn btn-sm btn-dark" href="/profile/gym ">Tu PokeGym</a>
    </li>
    {{/if}}

    {{#if errorMessage}}
    <div id="error">{{errorMessage}}</div>
    {{/if}}

</div>

<div class="container">
    <divv class="row">
        <h1>events</h1>
        {{#each allEvents}}
        <div class="col-md-6 mb-5">
            <div class="card" style="width: 18rem;">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{details}}</p>
                    <p class="card-text">{{date}}</p>
                    <p class="card-text">{{location}}</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
                <form action="/events/{{id}}/edit">
                    <button type="submit" class="btn btn-warning">EDIT</button>
                </form>
                <form action="/events/{{id}}/delete" method="POST">
                    <button type="submit" class="btn btn-danger">DELETE</button>
                </form>


                <form action="/profile/{{id}}" method="POST">
                    <button type="submit" class="btn btn-danger">APUNTARSE</button>
                </form>
            </div>
        </div>
        {{/each}}

    </divv>

</div>