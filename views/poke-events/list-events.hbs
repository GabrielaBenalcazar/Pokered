<div class="container">
    <div class="row">
        <h3 class="events-title">Agenda de eventos</h3>
        {{#each allEvents}}
        <div class="col-md-4     mb-5">
            <div class="card " style="width: 18rem;">
                <div class="height-card">
                    <img src="{{img}}" class="card-img-top" alt="..." />
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{details}}</p>
                    <p class="card-text"> {{date}}</p>
                    <p class="card-text"> {{location}}</p>
                    {{#each pokemons}}
                    <a href="/pokemons/{{this}}">{{this}}</a>
                    {{/each}}
                </div>
                <form action="/events/{{id}}" method="POST">
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-dark">APUNTARSE</button>
                    </div>
                </form>
            </div>
        </div>
        {{/each}}
    </div>
</div>