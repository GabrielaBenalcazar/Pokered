<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 ">
            <div class="d-flex justify-content-center">
                <div class="card " style="width: 18rem;">
                    <img class="card-img-top" src="{{img}}" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text">{{name}}</p>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{details}}</p>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{location}}</p>
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{date}}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <h6 class="mb-5">Asistentes</h6>
            {{#each participants}}
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-3">
                        <img style="height: 3rem" src="{{img}}" class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-9">
                        <div class="card-body" style="height: 3rem">
                            <div class="row">
                                <div class="col-md-8">
                                    <h4 class="card-text">{{username}}</h4>
                                </div>
                                <div class="col-md-4">
                                    <form action="/events/{{../_id}}/give-pokemons/{{id}}" method="POST">
                                        <button class="btn btn-sm btn-success" type="submit">Ha ganado</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            {{#each pokemons}}
            <ul>
                <li>
                    <a href="/pokemons/{{this}}">{{this}}</a>
                </li>
            </ul>
            {{/each}}
        </div>
    </div>
</div>