<div class="container">
    <div class="row justify-content-center">

        <div class="col-md-5">
            <h1>Registro</h1>
            <hr />
            <form action="/register" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="email" class="form-label">Dirección de email</label>
                    <input type="email" class="form-control" id="email" name="email" />
                    {{#if errorEmail}}
                        <div id="error">{{errorEmail}}</div>
                    {{/if}}

                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">Nombre de usuario</label>
                    <input type="text" class="form-control" id="username" name="username" />
                    {{#if errorUsername}}
                        <div id="error">{{errorUsername}}</div>
                    {{/if}}
                    <div class="form-text">Se verá públicamente</div>

                </div>
                <div class="mb-3">
                    <label for="img" class="form-label">Img URL</label>
                    <input type="file" class="form-control" id="img" name="imgFile" value="img" />
                    <div class="form-text">Se verá públicamente</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <input
                        type="password"
                        class="form-control"
                        id="password"
                        name="plainPassword"
                    />
                    {{#if errorPassword}}
                        <div id="error">{{errorPassword}}</div>
                    {{/if}}

                    {{#if errorMessage}}
                    <div id="error">{{{errorMessage}}}</div>
                    {{/if}}
                </div>

                <button type="submit" class="btn btn-dark">Registrarme</button>
            </form>
        </div>
    </div>
</div>



<div class="loginCnt">

    <div class="container">

        <section class="get-in-touch">
            <h1 class="title fw-bolder">Registro</h1>
            <form class="contact-form row" action="/login" method="POST">

                <div class="form-field col-lg-6">

                    <input
                        type="email"
                        class="form-control input-text js-input"
                        id="email"
                        name="email"
                    />
                    <label for="email" class="form-label text-col-lgn">Dirección de email</label>
                </div>
                <div class="form-field col-lg-6">

                    <input
                        id="password"
                        class="input-text js-input form-control"
                        type="password"
                        name="plainPassword"
                        required
                    />
                    <label for="password" class="form-label text-col-lgn">Contraseña</label>
                </div>

                {{#if errorMessage}}
                    <div id="error">{{errorMessage}}</div>
                {{/if}}

                <div class="form-field col-lg-12">
                    <button type="submit" class="submit-btn">Iniciar sesión</button>
                </div>
            </form>
        </section>

    </div>
</div>